{
  "manifest_version": 3,
  "name": "Vendzz WhatsApp Automation 2.0",
  "version": "2.0.0",
  "description": "Automação WhatsApp simplificada com WhatsApp Web.js para Vendzz",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost:5000/*",
    "https://*.replit.app/*",
    "https://*.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["whatsapp-webjs-integration.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["whatsapp-web.js", "sidebar.html", "sidebar.js", "config-auto-detect.js", "real-time-sync.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vendzz WhatsApp 2.0"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg", 
    "128": "icons/icon128.svg"
  }
}