{
  "manifest_version": 3,
  "name": "RocketZap Lead Extractor",
  "version": "1.0.0",
  "description": "Extrai automaticamente leads do RocketZap e agenda SMS",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "webRequest",
    "alarms",
    "downloads"
  ],
  
  "host_permissions": [
    "https://app.rocketzap.com.br/*",
    "https://entrega.logzz.com.br/*",
    "https://viacep.com.br/*",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://app.rocketzap.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup-visual.html",
    "default_title": "RocketZap Lead Manager",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "xls-parser.js", "logzz-real-integration.js"],
      "matches": ["https://app.rocketzap.com.br/*", "https://entrega.logzz.com.br/*"]
    }
  ]
}