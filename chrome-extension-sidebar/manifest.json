{
  "manifest_version": 3,
  "name": "Sidebar To-Do + Pomodoro",
  "version": "1.0.0",
  "description": "To-do list em colunas com sistema Pomodoro e sons ambientais na sidebar",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Abrir To-Do + Pomodoro"
  },
  "background": {
    "service_worker": "background.js"
  }
}