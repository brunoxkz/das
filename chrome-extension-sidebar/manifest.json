{
  "manifest_version": 3,
  "name": "Sidebar To-Do + Pomodoro",
  "version": "1.0.1",
  "description": "To-do list em colunas com Pomodoro e sons ambientais - Chrome/Opera compat√≠vel",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Abrir To-Do + Pomodoro"
  },
  "background": {
    "service_worker": "background.js"
  }
}