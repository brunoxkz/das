# Railway Environment Variables Template
# Copy these to Railway dashboard environment variables

# Database (will be auto-generated by Railway PostgreSQL plugin)
DATABASE_URL=postgresql://postgres:password@host:port/database

# JWT Authentication (generate strong secrets)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters

# Application
NODE_ENV=production
PORT=5000

# Marketing Integrations (Optional - configure as needed)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

BREVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=your_sender_email
BREVO_SENDER_NAME=your_sender_name

# Payment Gateways (Optional - configure as needed)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key

PAGARME_API_KEY=ak_live_your_pagarme_api_key
PAGARME_PUBLIC_KEY=pk_live_your_pagarme_public_key

# Push Notifications (will be auto-generated)
VAPID_PUBLIC_KEY=auto-generated
VAPID_PRIVATE_KEY=auto-generated
VAPID_SUBJECT=mailto:your-email@domain.com

# OpenAI (Optional)
OPENAI_API_KEY=sk-your_openai_api_key