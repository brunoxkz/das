# Database Configuration
NODE_ENV=development
PORT=3001

# SQLite (Development)
SQLITE_DATABASE_PATH=./database/app.sqlite

# PostgreSQL (Production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sql_project
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/sql_project

# API Configuration
API_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Features
ENABLE_LOGGING=true
ENABLE_CORS=true