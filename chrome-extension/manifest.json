{
  "manifest_version": 3,
  "name": "Vendzz WhatsApp Automation",
  "version": "1.0.0",
  "description": "Automação de campanhas WhatsApp para Vendzz",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost:5000/*",
    "https://*.replit.app/*",
    "https://*.replit.dev/*",
    "https://*.janeway.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vendzz WhatsApp"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}