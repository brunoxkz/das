{
  "manifest_version": 3,
  "name": "Vendzz WhatsApp Local Campaign Manager",
  "version": "2.0.0",
  "description": "Sistema h√≠brido de campanhas WhatsApp com armazenamento local e sync inteligente",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background",
    "notifications"
  ],

  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.vendzz.com/*",
    "https://*.replit.app/*"
  ],

  "background": {
    "service_worker": "background-v3.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": [
        "campaign-manager-local.js",
        "content-v3.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup-v3.html",
    "default_title": "Vendzz Local Campaigns",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "campaign-manager-local.js",
        "sync-local-storage.js"
      ],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://*.vendzz.com/*",
      "https://*.replit.app/*"
    ]
  }
}