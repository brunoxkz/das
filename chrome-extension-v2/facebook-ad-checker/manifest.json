{
  "manifest_version": 3,
  "name": "Facebook Ad Manager Data Checker",
  "version": "1.0.0",
  "description": "Verifica dados de anúncios no Facebook Ads Manager e exporta relatórios detalhados",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://business.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Ad Checker"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://business.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}