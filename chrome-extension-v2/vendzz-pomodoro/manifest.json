{
  "manifest_version": 3,
  "name": "Vendzz Pomodoro Timer",
  "version": "1.2.0",
  "description": "Timer Pomodoro integrado com controle de produtividade e estat√≠sticas detalhadas",
  "permissions": [
    "storage",
    "notifications",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vendzz Pomodoro Timer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}