{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../dist/server",
    "rootDir": ".",
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../client"
  ]
}